<header>
  {%- assign current_lang = page.lang | default: site.lang | default: 'en' -%}
  {%- assign other_lang = 'zh' -%}
  {%- if current_lang == 'zh' -%}{%- assign other_lang = 'en' -%}{%- endif -%}
  {%- assign lang_ui = site.data.i18n[current_lang] -%}
  {%- assign other_ui = site.data.i18n[other_lang] -%}

  {%- assign about_page = site.pages | where: "translation_key", "home" | where: "lang", current_lang | first -%}
  {%- assign about_url = about_page.url | default: "/" -%}
  {%- assign about_title = about_page.title | default: (lang_ui.nav.home | default: "About") -%}

  {%- assign alt_page = nil -%}
  {%- if page.translation_key -%}
    {%- assign alt_page = site.pages | where: "translation_key", page.translation_key | where: "lang", other_lang | first -%}
  {%- endif -%}
  {%- assign alt_url = alt_page.url -%}
  {%- if alt_url == nil or alt_url == '' -%}
    {%- if other_lang == 'zh' -%}
      {%- assign alt_url = '/zh/' -%}
    {%- else -%}
      {%- assign alt_url = '/' -%}
    {%- endif -%}
  {%- endif -%}

  {%- assign lang_switch_label = lang_ui.lang_label -%}
  {%- if lang_switch_label == nil or lang_switch_label == '' -%}
    {%- if other_lang == 'zh' -%}
      {%- assign lang_switch_label = '中文' -%}
    {%- else -%}
      {%- assign lang_switch_label = 'EN' -%}
    {%- endif -%}
  {%- endif -%}

  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      <a class="navbar-brand title font-weight-lighter" href="{{ about_url | relative_url }}">
        {% if site.title == 'blank' %}
          {% if site.first_name %}
            <span class="font-weight-bold">
              {{- site.first_name -}}
            </span>
          {% endif %}
          {% if site.middle_name %}
            {{- site.middle_name -}}
          {% endif %}
          {% if site.last_name %}
            {{- site.last_name -}}
          {% endif %}
        {% else %}
          {{- site.title -}}
        {% endif %}
      </a>
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          <!-- About -->
          <li class="nav-item {% if page.url == about_url %}active{% endif %}">
            <a class="nav-link" href="{{ about_url | relative_url }}">
              {{- about_title }}
              {% if page.url == about_url %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
          </li>

          <!-- Other pages -->
          {% assign sorted_pages = site.pages | where: "lang", current_lang | sort: 'nav_order' %}
          {% for p in sorted_pages %}
            {% if p.nav and p.autogen == null %}
              {% if p.dropdown %}
                {% assign has_active_child = false %}
                {% for child in p.children %}
                  {% if page.title == child.title %}
                    {% assign has_active_child = true %}
                  {% endif %}
                {% endfor %}
                <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    id="navbarDropdown"
                    role="button"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    {{- p.title }}
                    {% if page.title == p.title or has_active_child %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    {% for child in p.children %}
                      {% if child.title == 'divider' %}
                        <div class="dropdown-divider"></div>
                      {% else %}
                        <a
                          class="dropdown-item {% if page.title == child.title %}active{% endif %}"
                          href="{% if child.permalink contains '://' %}{{ child.permalink }}{% else %}{{ child.permalink | relative_url }}{% endif %}"
                        >
                          {{- child.title -}}
                        </a>
                      {% endif %}
                    {% endfor %}
                  </div>
                </li>
              {% else %}
                {% assign parent_link = p.permalink | remove: 'index.html' %}
                <li class="nav-item {% if page.url contains parent_link %}active{% endif %}">
                  {%- if p.permalink contains '://' -%}
                    {%- assign url = p.permalink -%}
                  {%- elsif p.permalink contains '/blog/' -%}
                    {%- assign url = '/blog/' -%}
                  {%- else -%}
                    {%- assign url = p.url -%}
                  {%- endif %}
                  <a class="nav-link" href="{{ url | relative_url }}">
                    {{- p.title }}
                    {% if page.url contains p.url %}
                      <span class="sr-only">(current)</span>
                    {% endif %}
                  </a>
                </li>
              {% endif %}
            {% endif %}
          {% endfor %}

          <!-- Language -->
          <li class="nav-item">
            <a class="nav-link" href="{{ alt_url | relative_url }}" aria-label="Switch language">
              {{- lang_switch_label -}}
            </a>
          </li>

          {% if site.search_enabled %}
            <!-- Search -->
            <li class="nav-item">
              <button id="search-toggle" title="Search" onclick="openSearchModal()">
                <span class="nav-link">ctrl k <i class="ti ti-search"></i></span>
              </button>
            </li>
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="ti ti-sun-moon" id="light-toggle-system"></i>
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </nav>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
