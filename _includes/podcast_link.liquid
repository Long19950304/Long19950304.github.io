{% assign podcast = site.data.podcasts[include.id] %}
{% if podcast and podcast.audio %}
  {% assign ui = site.data.i18n[page.lang] | default: site.data.i18n.en %}
  {% assign take_home_text = podcast.take_home %}
  {% if page.lang == "zh" and podcast.take_home_zh %}
    {% assign take_home_text = podcast.take_home_zh %}
  {% endif %}
  {% assign audio_path = podcast.audio | prepend: "/" %}
  {% assign audio_file = site.static_files | where: "path", audio_path | first %}
  {% if audio_file %}
    <div class="podcast-block">
      <details class="podcast" data-podcast-key="{{ include.id }}">
        <summary class="btn btn-sm z-depth-0 podcast-btn" role="button" aria-label="Listen to audio overview">
          <span class="podcast__summary-label">
            <i class="ti ti-headphones"></i>
            {{ ui.podcast.label }}
          </span>
          <i class="ti ti-chevron-down podcast__chev"></i>
        </summary>
        <div class="podcast__panel" role="group" aria-label="Podcast player">
          <audio
            class="podcast__audio"
            controls
            preload="none"
            data-src="{{ audio_file.path }}"
          ></audio>
          <div class="podcast__hint">
            {{ ui.podcast.hint }}
          </div>
        </div>
      </details>
      {% if take_home_text %}
        <div class="podcast-takehome"><strong>{{ ui.podcast.take_home_label }}</strong> {{ take_home_text }}</div>
      {% endif %}
      <div class="podcast-guidance">{{ ui.podcast.guidance }}</div>
    </div>
  {% endif %}
{% endif %}
